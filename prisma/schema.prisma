// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model TodoState {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  Todo        Todo[]
}

model Todo {
  id          Int      @id @default(autoincrement())
  userId      Int
  satateId    Int
  name        String
  description String
  archived    Boolean  @default(false)
  craetedTime DateTime

  stateId TodoState @relation(fields: [satateId], references: [id])
}
