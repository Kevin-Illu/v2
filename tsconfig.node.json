{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "types/**/*"],
  "exclude": ["resources"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "paths": {
      "@main/*": ["./src/main/src/*"],
      "$types/*": ["./types/*"],
    }
  }
}
